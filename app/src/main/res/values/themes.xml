<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_GitHubProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryVariant">@color/gray_light</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:itemTextAppearance">@style/customMenuTextAppearance</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme_GitHubProject.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme_GitHubProject.NoActionBar" parent="Theme_GitHubProject">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewTheme">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:background">@drawable/card_view</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="RoundedImageViewTheme">
<!--        <item name="cornerFamily">rounded</item>-->
<!--        <item name="cornerSize">20%</item>-->
    </style>

    <style name="SignInEditTextTheme">
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

    <style name="ProfileTextTheme">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_dark</item>
    </style>

    <style name="UserByFieldStyle">
        <item name="android:fontFamily">@font/lexendmedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BackgroundTextStyle">
        <item name="android:fontFamily">@font/lexendmedium</item>
        <item name="android:textColor">@color/orange_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="OwnerTextFieldStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RepositoryNameFieldStyle" parent="OwnerTextFieldStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RepositoryDataFieldStyle" parent="OwnerTextFieldStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.GitHubProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GitHubProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>