<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_GitHubProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2D2824</item>
        <item name="colorPrimaryVariant">@color/statusBarColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#282D24</item>
        <item name="colorSecondaryVariant">#212E97</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:itemTextAppearance">@style/customMenuTextAppearance</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme_GitHubProject.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme_GitHubProject.NoActionBar" parent="Theme_GitHubProject">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FragmentsTheme">
        <item name="android:background">@color/background</item>
    </style>

    <style name="RecyclerViewTheme">
        <item name="android:background">@color/background</item>
    </style>

    <style name="CardViewTheme">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">#E8EBF4</item>
    </style>

    <style name="RoundedImageViewTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="ItemFieldsStyle">
        <item name="android:fontFamily">@font/lexendmedium</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.GitHubProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GitHubProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>