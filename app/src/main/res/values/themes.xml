<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2D2824</item>
        <item name="colorPrimaryVariant">@color/statusBarColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#282D24</item>
        <item name="colorSecondaryVariant">#212E97</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/customMenuTextAppearance</item>
    </style>

    <style name="Theme.GitHubProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FragmentsTheme">
        <item name="android:background">@color/background</item>
    </style>

    <style name="ItemFieldsStyle">
        <item name="android:background">@color/background</item>
        <item name="android:fontFamily">@font/marvel_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchField">
        <item name="android:fontFamily">@font/marvel_bold</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColorHint">#7C7C7C</item>
    </style>


    <style name="Theme.GitHubProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GitHubProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>