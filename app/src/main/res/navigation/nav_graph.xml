<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SearchFragment">

    <fragment
        android:id="@+id/SearchFragment"
        android:name="com.atdev.githubproject.fragments.SearchFragment"
        android:label="@string/search_fragment_label"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/toDownloadFragment"
            app:destination="@id/DownloadedFragment" />
    </fragment>
    <fragment
        android:id="@+id/DownloadedFragment"
        android:name="com.atdev.githubproject.fragments.DownloadedFragment"
        android:label="@string/downloaded_fragment_label"
        tools:layout="@layout/fragment_downloaded">

        <action
            android:id="@+id/toSearchFragment"
            app:destination="@id/SearchFragment" />
    </fragment>
</navigation>